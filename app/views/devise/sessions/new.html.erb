<div style="width: 100%; margin-left: 100px;">
    <h2>Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

        <div style="width: 100%; height: 250px">
            <div style="float: left">
                  <div class="input-div"><%= f.label :email %><br />
                  <%= f.email_field :email, :autofocus => true, :class => "input" %></div>
            </div>

            <div style="float: left; width: 350px">
                  <div class="input-div"><%= f.label :password %><br />
                  <%= f.password_field :password, :class => "input" %></div>

              <div style="float: right; margin-right: 40px;">
                  <% if devise_mapping.rememberable? %>
                    <div>
                      <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "remember_me" %>
                    </div>
                  <% end %>

                  <div>
                    <%= f.submit "Sign in", :class => "submit-button01" %>
                  </div>
                  <div style="margin-top: 15px;">
                    <%= render "devise/shared/links" %>
                  </div>
              </div>
            </div>
        </div>

    <% end %>
</div>